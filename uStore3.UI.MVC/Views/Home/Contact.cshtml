@model uStore3.UI.MVC.Models.ContactViewModel
@{
    ViewBag.Title = "Contact";
}
<div id="contact-page" class="container">
    <div class="bg">
        <div class="row">
            <div class="col-sm-8">
                <div class="contact-form">
                    <h2 class="title text-center">Get In Touch</h2>
                    <div class="status alert alert-success" style="display: none"></div>

                    @*                    @using (Html.BeginForm())*@
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(x => x.Name, new { placeholder = "Name", @class = "form-control" })
                        </div>
                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(x => x.Email, new { placeholder = "Email", @class = "form-control" })
                        </div>
                        <div class="form-group col-md-12">
                            @Html.TextBoxFor(x => x.Subject, new { placeholder = "Subject", @class = "form-control" })
                        </div>
                        <div class="form-group col-md-12">
                            @Html.TextAreaFor(x => x.Message, new
                       {
                           placeholder = "Your Message Here",
                           id = "message",
                           rows = "8",
                           @class = "form-control",
                           title = "Pleasse include all relevent information"
                       })
                        </div>

                        <div class="form-group col-md-12">
                            <input type="submit" name="submit" class="btn btn-primary pull-right" value="Submit" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>