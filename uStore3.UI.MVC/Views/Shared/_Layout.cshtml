    <!-- <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,400i" rel="stylesheet"> -->
    <!-- Animate.css -->
    <link rel="stylesheet" href="~/Content/css/animate.css">
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="~/Content/css/icomoon.css">
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.css">
    <!-- Flexslider  -->
    <link rel="stylesheet" href="~/Content/css/flexslider.css">
    <!-- Owl Carousel  -->
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
    <!-- Theme style  -->
    <link rel="stylesheet" href="~/Content/css/style.css">
    <!-- Custom CSS  -->
    <link href="~/Content/css/custom.css" rel="stylesheet" />
    <!-- Modernizr JS -->
    <script src="~/Content/js/modernizr-2.6.2.min.js"></script>
    <!-- FOR IE9 below -->
    <!--[if lt IE 9]>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div class="fh5co-loader"></div>

    <div id="page">
        <nav class="fh5co-nav" role="navigation">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-xs-2">
                        <div id="fh5co-logo"><a href="@Url.Action("Index", "Home")">Gamers Corner.</a></div>
                    </div>
                    <div class="col-md-3 col-xs-3 text-center menu-1">
                        <ul>
                            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li><a href="@Url.Action("Index", "Products")">Shop</a></li>
                            <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <li><a href="@Url.Action("Index", "RolesAdmin")">Roles Admin</a></li>
                                <li><a href="@Url.Action("Index", "UsersAdmin")">Users Admin</a></li>
                            }
                        </ul>
                        
                    </div>
                    <div class="pull-right">@Html.Partial("_LoginPartial")</div>
                </div>

            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <div class="row row-pb-md footer">
                    <div class="col-md-4 fh5co-widget">
                        <h3>Gamers Corner.</h3>
                        <p>Where games do not come to die, but to re-spawn</p>
                    </div>
                    <div class="col-md-2 col-sm-4 col-xs-6 col-md-push-1">
                        <ul class="fh5co-footer-links">

                            <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>

                        </ul>
                    </div>
                    <div class="col-md-2 col-sm-4 col-xs-6 col-md-push-1">
                        <ul class="fh5co-footer-links">
                            <li><a href="@Url.Action("Index", "Product")">Shop</a></li>

                        </ul>
                    </div>
                    <div class="row copyright">

                        <div class="col-md-12 text-center">
                            <p>
                                <small class="block">&copy; 2019 Tim Reddin. All Rights Reserved.</small>
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @RenderSection("Scripts", false);
    <!-- jQuery -->
    <script src="~/Content/js/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="~/Content/js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="~/Content/js/jquery.waypoints.min.js"></script>
    <!-- Carousel -->
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <!-- countTo -->
    <script src="~/Content/js/jquery.countTo.js"></script>
    <!-- Flexslider -->
    <script src="~/Content/js/jquery.flexslider-min.js"></script>
    <!-- Main -->
    <script src="~/Content/js/main.js"></script>


</body>

</html>
