
@{
    ViewBag.Title = "Sports";
}

<header id="fh5co-header" class="fh5co-cover fh5co-cover-sm" role="banner" style="background-image:url(../../Content/images/img_bg_2.jpg);">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center">
                <div class="display-t">
                    <div class="display-tc animate-box" data-animate-effect="fadeIn">
                        <h1>Sports</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div id="fh5co-product">
    <div class="container">
        <div class="row">
            <div class="col-md-4 text-center animate-box">
                <div class="product">
                    <div class="product-grid" style="background-image:url(../../Content/images/_madden19HOF/_Madden19HOFBackground.jpg);">
                        <div class="inner">
                            <p>
                                <a href="@Url.Action("Madden19HOF", "Product")" class="icon"><i class="icon-eye"></i></a>
                            </p>
                        </div>
                    </div>
                    <div class="desc">
                        <h3><a href="@Url.Action("Madden19HOF", "Product")">Madden 19 Hall of Fame Edition</a></h3>
                        <span class="price">$68.75</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center animate-box">
                <div class="product">
                    <div class="product-grid" style="background-image:url(../../Content/images/_nba2k19/_NBA2K19Background.jpg);">
                        <div class="inner">
                            <p>
                                <a href="@Url.Action("NBA2K19", "Product")" class="icon"><i class="icon-eye"></i></a>
                            </p>
                        </div>
                    </div>
                    <div class="desc">
                        <h3><a href="@Url.Action("NBA2K19", "Product")">NBA2K19</a></h3>
                        <span class="price">$36.65</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>